<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.rv.rafaelbuscas.MainActivity">


    <EditText
        android:id="@+id/input_busca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/planets_spinner"
        android:layout_marginEnd="13dp" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="140px"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/input_busca"
        android:layout_alignBottom="@+id/input_busca"
        android:layout_toStartOf="@+id/botao_busca" />

    <Button
        android:id="@+id/botao_busca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:layout_alignBottom="@+id/input_busca"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/planets_spinner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/planets_spinner"

        android:text="Nome" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ServiÃ§o"
        android:layout_above="@+id/planets_spinner"
        android:layout_alignStart="@+id/planets_spinner"
        android:layout_alignTop="@+id/planets_spinner" />


    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/input_busca"
        android:layout_centerHorizontal="true" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/code"
        android:layout_alignParentEnd="true">

        <TableRow
            android:background="#607D8B"
            android:padding="5dp">

            <TextView
                android:id="@+id/th0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/th1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/th2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">

            <TextView
                android:id="@+id/td0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/td1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/td2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp"></TableRow>
    </TableLayout>

</RelativeLayout>
